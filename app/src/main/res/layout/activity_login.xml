<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F6F7"
    android:orientation="vertical"
    tools:context=".robot_activity.LoginActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/x140"
            android:layout_height="@dimen/x140"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x101"
            android:src="@mipmap/login_head" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x18"
            android:text="国安智慧家"
            android:textColor="#333333"
            android:textSize="@dimen/x30" />


        <!--账号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x50"
            android:layout_marginRight="@dimen/x60"
            android:background="@drawable/login_user_pwd_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x37"
                android:src="@mipmap/login_people" />

            <EditText
                android:id="@+id/edit_user_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:background="@null"
                android:hint="账号"
                android:inputType="textAutoComplete"
                android:maxLines="1"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/login_cusor_bg"
                android:textSize="@dimen/x28" />


        </LinearLayout>


        <!--密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginRight="@dimen/x60"
            android:background="@drawable/login_user_pwd_bg"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/x37"
                android:layout_height="@dimen/x37"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/x37"
                android:src="@mipmap/login_pwd" />

            <EditText
                android:id="@+id/edit_user_pwd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="密码"
                android:inputType="text"
                android:maxLines="1"
                android:textColor="#333333"
                android:textColorHint="#999999"
                android:textCursorDrawable="@drawable/login_cusor_bg"
                android:textSize="@dimen/x28" />

            <!--显示密码与否-->
            <LinearLayout
                android:id="@+id/linear_show_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/image_login_show_pwd_or_not"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/x30"
                    android:layout_marginRight="@dimen/x30"
                    android:src="@mipmap/login_pwd_hide" />

            </LinearLayout>


        </LinearLayout>


        <!--登录-->
        <Button
            android:id="@+id/button_login"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x88"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginTop="@dimen/x30"
            android:layout_marginRight="@dimen/x60"
            android:background="@drawable/login_no_data_bg"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x32" />

    </LinearLayout>




</RelativeLayout>