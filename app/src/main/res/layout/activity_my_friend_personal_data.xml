<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    tools:context=".robot_activity.MyFriendPersonalDataActivity">


    <com.hyphenate.fluter.robot_utils.MyActionBar
        android:id="@+id/action_my_friend_personal_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_below="@+id/action_my_friend_personal_data"
        android:background="#DEDEDE" />


    <LinearLayout
        android:id="@+id/linear_myfriend_head"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x160"
        android:layout_below="@+id/view_line"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_my_friend_head"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:background="@drawable/huanxing_robbt_bg"
            android:scaleType="fitXY" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_my_friend_marker"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注:姐姐"
                    android:textColor="#333333"
                    android:textSize="@dimen/x34" />

                <ImageView
                    android:id="@+id/image_set_marker"
                    android:layout_width="@dimen/x30"
                    android:layout_height="@dimen/x30"
                    android:layout_marginLeft="@dimen/x10"
                    android:src="@mipmap/my_friend_set_marker" />


            </LinearLayout>


            <TextView
                android:id="@+id/tv_my_friend_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:text="用户名:ajjoafjo"
                android:textColor="#999999"
                android:textSize="@dimen/x28" />


            <TextView
                android:id="@+id/tv_my_friend_zhanghu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x16"
                android:text="账户:18515599988"
                android:textColor="#999999"
                android:textSize="@dimen/x28" />


        </LinearLayout>


    </LinearLayout>


    <!--发送消息-->
    <LinearLayout
        android:id="@+id/linear_my_friend_send_msg"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x88"
        android:layout_below="@+id/linear_myfriend_head"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x161"
        android:background="@drawable/add_friend_bg"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x36"
            android:src="@mipmap/my_friend_msg" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:text="发送消息"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x32" />


    </LinearLayout>

    <!--语音通话-->
    <LinearLayout
        android:id="@+id/linear_my_friend_call"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x88"
        android:layout_below="@+id/linear_my_friend_send_msg"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/add_friend_bg"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x36"
            android:src="@mipmap/my_friend_call" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:text="语音通话"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x32" />


    </LinearLayout>

    <!--视频通话-->
    <LinearLayout
        android:id="@+id/linear_my_friend_video_call"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x88"
        android:layout_below="@+id/linear_my_friend_call"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/x30"
        android:background="@drawable/add_friend_bg"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="@dimen/x36"
            android:layout_height="@dimen/x36"
            android:src="@mipmap/my_friend_video" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x8"
            android:text="视频通话"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x32" />


    </LinearLayout>


    <TextView
        android:id="@+id/tv_delete_friend"
        android:layout_width="@dimen/x340"
        android:layout_height="@dimen/x88"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/x30"
        android:background="@drawable/my_friend_delete_friend_bg"
        android:gravity="center"
        android:text="删除好友"
        android:textColor="#999999"
        android:textSize="@dimen/x32" />


</RelativeLayout>