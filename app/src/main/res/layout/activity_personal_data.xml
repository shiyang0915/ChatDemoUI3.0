<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".robot_activity.PersonalDataActivity">

    <com.hyphenate.easeui.MyActionBar
        android:id="@+id/action_bar_personal_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#DEDEDE" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x160"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x30"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/image_persional_data"
            android:layout_width="@dimen/x160"
            android:layout_height="@dimen/x160"
            android:background="@drawable/huanxing_robbt_bg"
            android:src="@mipmap/robot_head" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_personal_data_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="用户名:ajjoafjo"
                android:textColor="#333333"
                android:textSize="@dimen/x30" />

            <TextView
                android:id="@+id/tv_personal_data_zhanghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x30"
                android:text="账号:18515599988"
                android:textColor="#333333"
                android:textSize="@dimen/x30" />

        </LinearLayout>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_add_friend"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x88"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x131"
        android:background="@drawable/add_friend_bg"
        android:gravity="center"
        android:text="添加好友"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/x32" />


</LinearLayout>