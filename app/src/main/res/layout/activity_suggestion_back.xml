<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".robot_activity.SuggestionBackActivity">

    <com.hyphenate.fluter.robot_utils.MyActionBar
        android:id="@+id/action_bar_suggestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#4285F4" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x326"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x34"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/msg_head_bg"
        android:orientation="vertical">


        <EditText
            android:textCursorDrawable="@drawable/login_cusor_bg"
            android:id="@+id/edit_suggestion"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="@dimen/x28"
            android:layout_marginTop="@dimen/x28"
            android:layout_marginRight="@dimen/x26"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="top|left"
            android:hint="请输入您的意见和建议(字数 200字以内)"
            android:maxLength="200"
            android:textColor="#333333"
            android:textColorHint="#999999"
            android:textSize="@dimen/x30" />


        <TextView
            android:id="@+id/tv_present_input_length"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="@dimen/x20"
            android:layout_marginBottom="@dimen/x20"
            android:text="0/200"
            android:textColor="#999999"
            android:textSize="@dimen/x24" />


    </LinearLayout>


    <Button
        android:id="@+id/button_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x88"
        android:layout_marginLeft="@dimen/x30"
        android:layout_marginTop="@dimen/x100"
        android:layout_marginRight="@dimen/x30"
        android:background="@drawable/login_no_data_bg"
        android:text="提交"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/x32" />


</LinearLayout>