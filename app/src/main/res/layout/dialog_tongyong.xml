<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/x460"
        android:layout_height="@dimen/x265"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_dialog_msg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/x176"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginRight="@dimen/x40"
            android:gravity="left|center"
            android:text="检测到未绑定机器人，先去和机器人成为朋友吧!"
            android:textColor="#333333"
            android:textSize="@dimen/x32" />


        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#D8D8D8" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_dialog_left_bottom"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/cancel_bg"
                android:gravity="center"
                android:text="取消"
                android:textColor="#666666"
                android:textSize="@dimen/x32" />

            <TextView
                android:id="@+id/tv_dialog_bottom_right"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#79D5FF"
                android:gravity="center"
                android:text="去绑定"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x32" />


        </LinearLayout>


    </LinearLayout>


</LinearLayout>