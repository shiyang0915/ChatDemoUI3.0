<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x120"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x80"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x30"
            android:background="@drawable/huanxing_robbt_bg"
            android:src="@mipmap/robot_head" />


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/x20"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="shiyang"
                android:textColor="#333333"
                android:textSize="@dimen/x34" />


            <TextView
                android:id="@+id/message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x8"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="你好，我是施洋"
                android:textColor="#999999"
                android:textSize="@dimen/x24" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="@dimen/x79"
            android:layout_height="@dimen/x44"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="@dimen/x30">


            <TextView
                android:id="@+id/tv_new_friend_item_already_agree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="已同意"
                android:textColor="#CCCCCC"
                android:textSize="@dimen/x24" />


            <Button
                android:id="@+id/btn_agree"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/new_friend_agree_bg"
                android:gravity="center"
                android:text="同意"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/x24" />


        </FrameLayout>


    </LinearLayout>


</LinearLayout>