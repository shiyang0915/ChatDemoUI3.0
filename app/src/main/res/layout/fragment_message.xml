<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <!--title-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x25">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="消息"
            android:textColor="#000000"
            android:textSize="@dimen/x34" />

        <ImageView
            android:id="@+id/image_tongxunlu"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x114"
            android:src="@mipmap/tongxunlu" />


        <ImageView
            android:id="@+id/image_add_friend"
            android:layout_width="@dimen/x44"
            android:layout_height="@dimen/x44"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x30"
            android:src="@mipmap/add_friend" />


    </RelativeLayout>

    <!--所搜-->
    <LinearLayout
        android:id="@+id/linear_sou_suo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x72"
        android:layout_marginLeft="@dimen/x32"
        android:layout_marginTop="@dimen/x22"
        android:layout_marginRight="@dimen/x32"
        android:background="@drawable/sousuo_bg"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/x28"
            android:layout_height="@dimen/x28"
            android:src="@mipmap/search" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x14"
            android:text="搜索"
            android:textColor="#8E8E93"
            android:textSize="@dimen/x34" />


    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x120">

        <View
            android:layout_width="@dimen/x300"
            android:layout_height="@dimen/x300"
            android:background="@drawable/empty_roobt_bg" />

        <ImageView
            android:layout_width="@dimen/x259"
            android:layout_height="@dimen/x301"
            android:layout_centerInParent="true"
            android:src="@mipmap/empty_msg_robbt" />


    </RelativeLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/x41"
        android:text="机器人准备就绪"
        android:textSize="@dimen/x36"
        android:textStyle="bold"
        android:textColor="#333333"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="正在等在主人唤醒!"
        android:textSize="@dimen/x30"
        android:layout_marginTop="@dimen/x20"/>


    <Button
        android:background="@drawable/huanxin_bg"
        android:id="@+id/btn_huanxin"
        android:layout_width="@dimen/x400"
        android:layout_height="@dimen/x70"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="@dimen/x30"
        android:text="唤醒~"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/x32" />


</LinearLayout>
