<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="@dimen/x540"
        android:layout_height="@dimen/x312"
        android:background="@drawable/dialog_bg"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x40"
            android:text="为他设置备注"
            android:textColor="#333333"
            android:textSize="@dimen/x32" />


        <LinearLayout
            android:layout_width="@dimen/x420"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x30"
            android:background="@drawable/set_remarks_bg"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/edit_makers"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/x20"
                android:layout_weight="1"
                android:background="@null"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textCursorDrawable="@drawable/cursor_color" />


            <ImageView
                android:id="@+id/image_input_delete"
                android:layout_width="@dimen/x44"
                android:layout_height="@dimen/x44"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="@dimen/x13"
                android:src="@mipmap/input_delete" />


        </LinearLayout>


        <TextView
            android:id="@+id/tv_dialog_set_marks_ok"
            android:layout_width="@dimen/x192"
            android:layout_height="@dimen/x60"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/x50"
            android:background="@drawable/set_marks_ok_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/x32" />


    </LinearLayout>


</LinearLayout>